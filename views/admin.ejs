    function buildCronExpression() {
      const minute = document.getElementById('scheduleMinute').value;
      const hour = document.getElementById('scheduleHour').value;

      // Get selected days from active divs
      const days = Array.from(document.querySelectorAll('.schedule-day-btn.active'))
        .map(btn => btn.dataset.day)
        .sort((a, b) => a - b)
        .join(',');

      if (!days) {
