    });

    function handleAutoplayError(playFunction) {
      // If already unlocked, just play
      if (audioUnlocked) {
        playFunction();
        return;
      }

      // If autoplay was blocked, show overlay and store the action
      pendingPlayAction = playFunction;
      document.getElementById('autoplayBlockedOverlay').style.display = 'block';
    }

    function enableAudio() {
      console.log('[Admin] User clicked to enable audio');
      audioUnlocked = true;
      document.getElementById('autoplayBlockedOverlay').style.display = 'none';

      // Execute pending play action if exists
      if (pendingPlayAction) {
        console.log('[Admin] Executing pending play action');
        pendingPlayAction();
        pendingPlayAction = null;
      }
    }

    socket.on('connect', () => {
      console.log('[Admin] Socket connected:', socket.id);

      // Join admin room with takeover flag
      socket.emit('join_admin_room', {
        takeover: window.adminTakeover
      });

      // Reset takeover flag after use
      window.adminTakeover = false;

      // Hide overlay when reconnecting
      document.getElementById('inactiveOverlay').style.display = 'none';
