    const btnPlayPause = document.getElementById('btnPlayPause');

    audio.addEventListener('loadedmetadata', () => {
      console.log('[Admin] Metadata loaded - duration:', audio.duration);
      btnPlayPause.disabled = false;
      document.getElementById('duration').textContent = formatTime(audio.duration);
    });

    audio.addEventListener('timeupdate', updateProgress);

    audio.addEventListener('play', () => {
      console.log('[Admin] Audio play event triggered');
      btnPlayPause.innerHTML = '<i class="bi bi-pause-fill"></i>';
    });

    audio.addEventListener('pause', () => {
      console.log('[Admin] Audio pause event triggered');
      btnPlayPause.innerHTML = '<i class="bi bi-play-fill"></i>';
    });

    audio.addEventListener('ended', () => {
      console.log('[Admin] Audio ended event triggered');
      btnPlayPause.innerHTML = '<i class="bi bi-play-fill"></i>';
      btnPlayPause.disabled = true;
    });

    audio.addEventListener('error', (e) => {
      console.error('[Admin] Audio error event:', e);
      console.error('[Admin] Audio error code:', audio.error ? audio.error.code : 'none');
      console.error('[Admin] Audio error message:', audio.error ? audio.error.message : 'none');
    });

    // Add error handler to catch audio loading errors
    audio.addEventListener('error', (e) => {
      console.error('[Admin] Audio error:', e);
      console.error('[Admin] Audio error details:', audio.error);
      if (audio.error) {
        console.error('[Admin] Error code:', audio.error.code);
        console.error('[Admin] Error message:', audio.error.message);
      }
    });

    // Add waiting handler to show loading state
    audio.addEventListener('waiting', () => {
      console.log('[Admin] Audio waiting/buffering...');
    });

    // Add canplay handler
    audio.addEventListener('canplay', () => {
      console.log('[Admin] Audio can play - ready to start');
    });

    document.getElementById('progressBarContainer').addEventListener('click', seekAudio);

    async function toggleSchedule(id, isActive) {
      try {
        const res = await fetch(`/api/schedules/${id}`, {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ is_active: isActive })
        });
        const data = await res.json();
        if (data.success) {
          loadSchedules();
        } else {
          alert(data.message);
        }
      } catch (error) {
        alert('Lỗi rồi bạn ơi');
      }
    }

    async function deleteSchedule(id) {
      if (confirm('Xóa lịch này? Không thể hoàn tác đâu nhaa')) {
        try {
          const res = await fetch(`/api/schedules/${id}`, { method: 'DELETE' });
          const data = await res.json();
          if (data.success) {
            loadSchedules();
            alert('Đã xóa lịch rồi nha');
          } else {
            alert(data.message);
          }
        } catch (error) {
          alert('Xóa lịch lỗi rồi bạn ơi');
        }
      }
