    function takeoverAdmin() {
      console.log('[Admin] Attempting to takeover admin control...');

      // Set takeover flag BEFORE reconnecting
      window.adminTakeover = true;

      // Reconnect socket - this will trigger join_admin_room with takeover=true
      socket.disconnect();
      socket.connect();

      console.log('[Admin] Takeover initiated - reconnecting with takeover flag...');
    }

    socket.on('queue_updated', () => loadQueue());
    socket.on('recently_played_updated', () => loadRecentlyPlayed());
    socket.on('schedule_updated', () => loadSchedules());

    // Handle play announcement event (Web Speech API ‚Üí Music sequentially)
    socket.on('play_announcement', (data) => {
      console.log('[Admin] Received play_announcement event:', data);

      // Stop any existing announcement audio
      if (currentAnnouncementAudio) {
        currentAnnouncementAudio.pause();
        currentAnnouncementAudio = null;
      }

      const audio = document.getElementById('audioPlayer');
      const btnPlayPause = document.getElementById('btnPlayPause');

      // Stop any currently playing music
      if (!audio.paused) {
        console.log('[Admin] Stopping current music before announcement');
        audio.pause();
        audio.currentTime = 0;
      }

      audio.volume = data.volume / 100;

      // Update volume slider UI
      const volumeSlider = document.getElementById('volumeSlider');
      const volumeValue = document.getElementById('volumeValue');
      volumeSlider.value = data.volume;
      volumeValue.textContent = data.volume;

      // Show DJ announcement indicator
      document.getElementById('nowPlaying').innerHTML = `
        <div>
          <i class="bi bi-broadcast spinning" style="font-size: 3rem; color: #ff6b6b;"></i>
          <div class="mt-3">
            <strong style="font-size: 0.9rem;">üéôÔ∏è DJ ƒëang gi·ªõi thi·ªáu...</strong><br>
