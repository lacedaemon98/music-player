    async function uploadOfflineMusic(event) {
      event.preventDefault();

      if (!isActiveTab || !socket.connected) {
        alert('Tab này không còn hoạt động.');
        return;
      }

      const fileInput = document.getElementById('musicFile');
      const files = fileInput.files;
      const btnUpload = document.getElementById('btnUploadMusic');
      const progressDiv = document.getElementById('uploadProgress');
      const progressBar = document.getElementById('uploadProgressBar');
      const statusText = document.getElementById('uploadStatus');

      if (!files || files.length === 0) {
        alert('Vui lòng chọn file nhạc để upload');
        return;
      }

      // Validate file sizes
      for (let file of files) {
        if (file.size > 50 * 1024 * 1024) {
          alert(`File "${file.name}" quá lớn (${(file.size / 1024 / 1024).toFixed(1)}MB). Tối đa 50MB/file.`);
          return;
        }
      }

      btnUpload.disabled = true;
      btnUpload.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Đang upload...';
      progressDiv.style.display = 'block';

      try {
        const formData = new FormData();
        for (let file of files) {
          formData.append('music', file);
        }

        const xhr = new XMLHttpRequest();

        // Progress tracking
        xhr.upload.addEventListener('progress', (e) => {
          if (e.lengthComputable) {
            const percent = Math.round((e.loaded / e.total) * 100);
            progressBar.style.width = percent + '%';
            progressBar.textContent = percent + '%';
            statusText.textContent = `Đã upload ${(e.loaded / 1024 / 1024).toFixed(1)}MB / ${(e.total / 1024 / 1024).toFixed(1)}MB`;
          }
        });

        // Complete handling
        const response = await new Promise((resolve, reject) => {
          xhr.addEventListener('load', () => {
            if (xhr.status === 200) {
              resolve(JSON.parse(xhr.responseText));
            } else {
              reject(new Error(xhr.statusText));
            }
          });
          xhr.addEventListener('error', () => reject(new Error('Network error')));
          xhr.open('POST', files.length > 1 ? '/api/upload/music/batch' : '/api/upload/music');
          xhr.send(formData);
        });

        if (response.success) {
          fileInput.value = '';
          progressBar.style.width = '100%';
          progressBar.textContent = '100%';
          statusText.textContent = '✅ Upload thành công!';

          setTimeout(() => {
            progressDiv.style.display = 'none';
            progressBar.style.width = '0%';
            statusText.textContent = '';
          }, 3000);

          alert(`✅ ${response.message}\n\nFile(s) đã được upload và sẵn sàng sử dụng.`);

          // Reload offline music list
          loadOfflineMusicList();
        } else {
          throw new Error(response.message);
        }
      } catch (error) {
        console.error('[Admin] Error uploading music:', error);
        progressDiv.style.display = 'none';
        alert('❌ Upload thất bại: ' + error.message);
      } finally {
        btnUpload.disabled = false;
        btnUpload.innerHTML = '<i class="bi bi-cloud-upload"></i> Upload nhạc';
      }
    }

