    async function loadAudioDevices(skipPermissionRequest = false) {
      try {
        const select = document.getElementById('audioOutput');
        const helpDiv = document.getElementById('devicePermissionHelp');

        // First, try to enumerate devices
        let devices = await navigator.mediaDevices.enumerateDevices();
        let audioOutputs = devices.filter(d => d.kind === 'audiooutput');

        // Check if we have device labels
        const hasLabels = audioOutputs.some(d => d.label && d.label.trim() !== '');

        // If no labels and not skipping, silently request permission
        if (!hasLabels && !skipPermissionRequest) {
          try {
            console.log('[Admin] Requesting audio permission to get device labels...');
            const stream = await navigator.mediaDevices.getUserMedia({ audio: true });

            // Immediately stop the stream - we only needed permission
            stream.getTracks().forEach(track => track.stop());

            // Now re-enumerate to get actual labels
            devices = await navigator.mediaDevices.enumerateDevices();
            audioOutputs = devices.filter(d => d.kind === 'audiooutput');
            const gotLabels = audioOutputs.some(d => d.label && d.label.trim() !== '');

            if (gotLabels) {
              console.log('[Admin] Got device labels after permission');
              helpDiv.style.display = 'none';
            } else {
              console.log('[Admin] Still no labels after permission');
              helpDiv.style.display = 'block';
            }
          } catch (permErr) {
            console.log('[Admin] Audio permission denied, using generic labels');
            helpDiv.style.display = 'block';
          }
        } else if (!hasLabels) {
          // Show help if still no labels
          helpDiv.style.display = 'block';
        } else {
          // Hide help if we have labels
          helpDiv.style.display = 'none';
        }

        if (audioOutputs.length === 0) {
          select.innerHTML = '<option value="">Default Output</option>';
          return;
        }

        select.innerHTML = audioOutputs.map((d, i) => {
          const label = d.label || `Speaker ${i + 1}`;
          return `<option value="${d.deviceId}">${label}</option>`;
        }).join('');

        // Remove existing listener to avoid duplicates
        const newSelect = select.cloneNode(true);
        select.parentNode.replaceChild(newSelect, select);

        newSelect.addEventListener('change', async (e) => {
          const audio = document.getElementById('audioPlayer');
          const deviceId = e.target.value;
          const deviceName = e.target.options[e.target.selectedIndex].text;

          if (audio.setSinkId) {
            try {
              const wasPlaying = !audio.paused;
              const currentTime = audio.currentTime;

              // Pause first, then change device, then resume
              if (wasPlaying) {
                audio.pause();
              }

              await audio.setSinkId(deviceId);
              console.log('[Admin] Main audio output device changed to:', deviceName);

              // Resume if was playing
              if (wasPlaying) {
                audio.currentTime = currentTime;
                await audio.play();
                console.log('[Admin] Resumed playback on new device');
              }
            } catch (err) {
              console.error('[Admin] Failed to set main audio output device:', err);
            }
          }

          // Also update announcement audio if it's currently playing
          if (currentAnnouncementAudio && currentAnnouncementAudio.setSinkId) {
            try {
              const wasPlaying = !currentAnnouncementAudio.paused;
              const currentTime = currentAnnouncementAudio.currentTime;

              if (wasPlaying) {
                currentAnnouncementAudio.pause();
              }

              await currentAnnouncementAudio.setSinkId(deviceId);
              console.log('[Admin] Announcement audio output device changed to:', deviceName);

              if (wasPlaying) {
                currentAnnouncementAudio.currentTime = currentTime;
                await currentAnnouncementAudio.play();
              }
            } catch (err) {
              console.error('[Admin] Failed to set announcement output device:', err);
            }
          }
        });
      } catch (err) {
        console.error('[Admin] Failed to enumerate audio devices:', err);
        document.getElementById('audioOutput').innerHTML = '<option value="">Default Output</option>';
      }
    }

