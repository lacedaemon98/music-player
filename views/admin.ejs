        </div>
      `;

      // Check if we have ElevenLabs audio URL (preferred method)
      if (data.announcement_audio_url) {
        console.log('[Admin] Playing ElevenLabs TTS audio:', data.announcement_audio_url);

        // Preload music stream IMMEDIATELY (parallel with announcement)
        console.log('[Admin] Preloading music stream:', data.stream_url);
        audio.src = data.stream_url;
        audio.load(); // Start loading music in background
        audio.volume = data.volume / 100;

        // Create audio element for announcement
        const announcementAudio = new Audio(data.announcement_audio_url);
        announcementAudio.volume = 1.0;

        // Save reference for output device switching
        currentAnnouncementAudio = announcementAudio;

        // Set output device to match main audio player
        const selectedDevice = document.getElementById('audioOutput').value;
        if (announcementAudio.setSinkId && selectedDevice) {
          announcementAudio.setSinkId(selectedDevice).then(() => {
            console.log('[Admin] Announcement audio using device:', selectedDevice);
          }).catch(err => {
            console.warn('[Admin] Failed to set announcement output device:', err);
          });
        }

        let musicStarted = false;

        function playMusic() {
          if (musicStarted) return;
          musicStarted = true;

          // Update now playing UI
          document.getElementById('nowPlaying').innerHTML = `
            <div>
              <i class="bi bi-disc-fill spinning" style="font-size: 3rem;"></i>
              <div class="mt-3">
                <strong style="font-size: 1.1rem;">${data.song.title}</strong><br>
                <span style="opacity: 0.8;">${data.song.artist || 'Unknown Artist'}</span>
              </div>
            </div>
          `;

          // Music already preloaded, just play it
          audio.play().then(() => {
            console.log('[Admin] Playing music:', data.song.title);
            btnPlayPause.disabled = false;
            btnPlayPause.innerHTML = '<i class="bi bi-pause-fill"></i>';
          }).catch(err => {
            console.error('[Admin] Error playing music:', err);
            if (err.name === 'NotAllowedError') {
              // Autoplay blocked - show overlay and retry after user click
              handleAutoplayError(() => playMusic());
            } else {
              btnPlayPause.disabled = false;
            }
          });
        }

        announcementAudio.onended = () => {
          console.log('[Admin] ElevenLabs announcement ended, starting music');
          currentAnnouncementAudio = null; // Clear reference
          playMusic();
        };

        announcementAudio.onerror = (err) => {
          console.error('[Admin] Error playing announcement audio:', err);
          console.warn('[Admin] Falling back to immediate music play');
          currentAnnouncementAudio = null; // Clear reference
          playMusic();
        };

        // Play the announcement audio
        announcementAudio.play().catch(err => {
          console.error('[Admin] Failed to play announcement:', err);
          currentAnnouncementAudio = null; // Clear reference on play failure

          if (err.name === 'NotAllowedError') {
            // Autoplay blocked - show overlay and retry after user click
            handleAutoplayError(() => {
              announcementAudio.play().catch(() => playMusic());
            });
          } else {
            playMusic();
          }
        });

      } else if ('speechSynthesis' in window && data.announcement_text) {
        // Fallback to Web Speech API if no ElevenLabs audio
        console.log('[Admin] No ElevenLabs audio, using Web Speech API:', data.announcement_text);

        const utterance = new SpeechSynthesisUtterance(data.announcement_text);
        utterance.lang = 'vi-VN';
        utterance.rate = 0.95;
        utterance.pitch = 1.0;
        utterance.volume = 1.0;

