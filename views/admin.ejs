      border: 2px solid var(--primary);
    }

    .form-select {
      background: white;
      border: none;
      border-radius: 8px;
      padding: 0.5rem 1rem;
    }

    @keyframes spin {
      from { transform: rotate(0deg); }
      to { transform: rotate(360deg); }
    }

    .spinning {
