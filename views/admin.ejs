      color: white;
      padding: 0.5rem 1rem;
      border-radius: 20px;
      font-weight: 600;
      display: flex;
      align-items: center;
      gap: 0.5rem;
      cursor: pointer;
      transition: all 0.3s;
      border: 2px solid transparent;
    }

    .vote-badge:hover {
      transform: scale(1.1);
      box-shadow: 0 4px 12px rgba(25, 118, 210, 0.4);
      border-color: white;
    }

    .vote-badge:active {
      transform: scale(0.95);
    }

    .btn-delete {
      background: linear-gradient(135deg, #ef5350 0%, var(--danger) 100%);
      border: none;
      color: white;
      padding: 0.5rem 1rem;
      border-radius: 8px;
      transition: all 0.3s;
    }

    .btn-delete:hover {
      transform: scale(1.05);
      box-shadow: 0 4px 12px rgba(211, 47, 47, 0.4);
    }

    /* Recently Played List */
    .recent-item {
      background: linear-gradient(135deg, #f5f5f5 0%, #e0e0e0 100%);
      padding: 0.75rem;
      margin-bottom: 0.75rem;
      border-radius: 10px;
      display: flex;
      align-items: center;
      gap: 0.75rem;
      transition: all 0.2s;
    }

    .recent-item:hover {
