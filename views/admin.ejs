        const setVoiceAndSpeak = () => {
          if (hasSpoken) return; // Already speaking, don't speak again
          hasSpoken = true;

          const voices = speechSynthesis.getVoices();
          console.log('[Admin] Available voices:', voices.length);
          console.log('[Admin] All voices:', voices.map(v => `${v.name} (${v.lang})`).join(', '));

          // Priority order for Vietnamese voices
          const viVoice = voices.find(voice => voice.lang === 'vi-VN') || // Exact match first
                         voices.find(voice => voice.lang.startsWith('vi-')) || // Any Vietnamese
                         voices.find(voice => voice.name.toLowerCase().includes('vietnam')) || // Name contains Vietnam
                         voices.find(voice => voice.name.includes('Google') && voice.lang.includes('vi')); // Google Vietnamese

