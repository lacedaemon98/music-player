              console.log('[Admin] Announcement audio output device changed to:', deviceName);
            } catch (err) {
              console.error('[Admin] Failed to set announcement output device:', err);
            }
          }
        });
      } catch (err) {
        console.error('[Admin] Failed to enumerate audio devices:', err);
        document.getElementById('audioOutput').innerHTML = '<option value="">Default Output</option>';
      }
