    // Helper function to decode cron to readable text
    function decodeCron(cronExpression) {
      try {
        const parts = cronExpression.split(' ');
        const minute = parts[0].padStart(2, '0');
        const hour = parts[1].padStart(2, '0');
        const days = parts[4];

        const dayNames = { 0: 'CN', 1: 'T2', 2: 'T3', 3: 'T4', 4: 'T5', 5: 'T6', 6: 'T7' };
        const dayList = days.split(',').map(d => dayNames[d] || d).join(', ');

        return `${dayList} lúc ${hour}:${minute}`;
      } catch (e) {
        return cronExpression;
      }
    }

