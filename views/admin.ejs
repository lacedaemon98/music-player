      transform: translateX(4px);
    }

    .recent-item-thumbnail {
      width: 50px;
      height: 50px;
      object-fit: cover;
      border-radius: 6px;
      flex-shrink: 0;
    }

    .recent-item-info {
      flex: 1;
      min-width: 0;
    }

    .recent-item-title {
      font-weight: 600;
      font-size: 0.9rem;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
      margin-bottom: 0.25rem;
    }

    .recent-item-meta {
      color: #666;
      font-size: 0.8rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .recent-item-added-by {
      display: flex;
      align-items: center;
      gap: 0.25rem;
    }

    .btn-delete-small {
