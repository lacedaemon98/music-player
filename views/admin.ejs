          tempAudio.remove();
          audioUnlocked = true;
          // No need to show init button
        }).catch(() => {
          console.log('[Admin] ‚ö†Ô∏è Autoplay blocked - showing init button');
          audioUnlocked = false;
          // Show init button
          document.getElementById('btnInitPlayer').style.display = 'inline-block';
        });
