      isActiveTab = false;

      // Stop audio if playing
      const audio = document.getElementById('audioPlayer');
      audio.pause();
      audio.src = '';

      // Show blocking overlay (NO redirect, allow takeover)
      document.getElementById('inactiveOverlay').style.display = 'block';

      console.log('[Admin] Tab marked as inactive - overlay shown');
    });

