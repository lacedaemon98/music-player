    body {
      background: linear-gradient(135deg, var(--secondary) 0%, #f5f5f5 100%);
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      min-height: 100vh;
    }

    .navbar-custom {
