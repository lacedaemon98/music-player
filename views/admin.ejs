    // Format message time (show date if not today)
    function formatMessageTime(dateStr) {
      const msgDate = new Date(dateStr);
      const today = new Date();

      // Check if message is from today
      const isToday = msgDate.toDateString() === today.toDateString();

      if (isToday) {
        return msgDate.toLocaleTimeString('vi-VN', { hour: '2-digit', minute: '2-digit' });
      } else {
        // Show date + time
        return msgDate.toLocaleDateString('vi-VN', { day: '2-digit', month: '2-digit' }) + ' ' +
               msgDate.toLocaleTimeString('vi-VN', { hour: '2-digit', minute: '2-digit' });
      }
    }

