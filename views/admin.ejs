    let pendingPlayAction = null;
    let audioUnlocked = false;

    // Initialize player function (called by user click)
    function initializePlayer() {
      console.log('[Admin] User initializing player...');

      // Create temporary audio to unlock (don't use main player)
      const tempAudio = new Audio();
      tempAudio.volume = 0;
      tempAudio.src = 'data:audio/wav;base64,UklGRiQAAABXQVZFZm10IBAAAAABAAEAQB8AAEAfAAABAAgAZGF0YQAAAAA=';
      tempAudio.play().then(() => {
        console.log('[Admin] ✓ Player initialized successfully');
        audioUnlocked = true;
        tempAudio.remove();

        // Hide init button
        document.getElementById('btnInitPlayer').style.display = 'none';
      }).catch(err => {
        console.error('[Admin] Failed to initialize:', err);
      });
    }

    // Initialize audio on page load to unlock autoplay
    window.addEventListener('DOMContentLoaded', () => {
      // Create temporary audio to unlock (don't use main player)
      const tempAudio = new Audio();
      tempAudio.volume = 0;
      tempAudio.src = 'data:audio/wav;base64,UklGRiQAAABXQVZFZm10IBAAAAABAAEAQB8AAEAfAAABAAgAZGF0YQAAAAA=';
      const playPromise = tempAudio.play();

      if (playPromise !== undefined) {
        playPromise.then(() => {
          console.log('[Admin] ✓ Audio unlocked automatically');
          tempAudio.remove();
          audioUnlocked = true;
          // No need to show init button
        }).catch(() => {
          console.log('[Admin] ⚠️ Autoplay blocked - showing init button');
          audioUnlocked = false;
          // Show init button
          document.getElementById('btnInitPlayer').style.display = 'inline-block';
        });
      }
    });

    function handleAutoplayError(playFunction) {
      // If already unlocked, just play
      if (audioUnlocked) {
        playFunction();
        return;
      }

      // If autoplay was blocked, show overlay and store the action
      pendingPlayAction = playFunction;
      document.getElementById('autoplayBlockedOverlay').style.display = 'block';
    }

    function enableAudio() {
      console.log('[Admin] User clicked to enable audio');
      audioUnlocked = true;
      document.getElementById('autoplayBlockedOverlay').style.display = 'none';

      // Execute pending play action if exists
      if (pendingPlayAction) {
        console.log('[Admin] Executing pending play action');
        pendingPlayAction();
        pendingPlayAction = null;
      }
    }

    socket.on('connect', () => {
      console.log('[Admin] Socket connected:', socket.id);

      // Join admin room with takeover flag
      socket.emit('join_admin_room', {
        takeover: window.adminTakeover
      });

      // Reset takeover flag after use
      window.adminTakeover = false;

      // Hide overlay when reconnecting
      document.getElementById('inactiveOverlay').style.display = 'none';
    });

    socket.on('admin_active', (data) => {
      console.log('[Admin] This tab is now active:', data);
      isActiveTab = true;
      document.getElementById('inactiveOverlay').style.display = 'none';

      // Request playback state for resume (after refresh)
      socket.emit('get_playback_state');
    });

    socket.on('admin_rejected', (data) => {
      console.log('[Admin] Admin room join rejected:', data.message);
      isActiveTab = false;

      // Stop audio if playing
      const audio = document.getElementById('audioPlayer');
      audio.pause();
      audio.src = '';

