    async function loadAudioDevices(skipPermissionRequest = false) {
      try {
        const select = document.getElementById('audioOutput');
        const helpDiv = document.getElementById('devicePermissionHelp');

        // First, try to enumerate devices
        let devices = await navigator.mediaDevices.enumerateDevices();
        let audioOutputs = devices.filter(d => d.kind === 'audiooutput');

        // Check if we have device labels
        const hasLabels = audioOutputs.some(d => d.label && d.label.trim() !== '');

        // If no labels and not skipping, silently request permission
        if (!hasLabels && !skipPermissionRequest) {
          try {
            console.log('[Admin] Requesting audio permission to get device labels...');
            const stream = await navigator.mediaDevices.getUserMedia({ audio: true });

            // Immediately stop the stream - we only needed permission
            stream.getTracks().forEach(track => track.stop());

            // Now re-enumerate to get actual labels
            devices = await navigator.mediaDevices.enumerateDevices();
            audioOutputs = devices.filter(d => d.kind === 'audiooutput');
            const gotLabels = audioOutputs.some(d => d.label && d.label.trim() !== '');

            if (gotLabels) {
              console.log('[Admin] Got device labels after permission');
              helpDiv.style.display = 'none';
            } else {
