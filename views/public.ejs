    }

    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(25, 118, 210, 0.4);
    }

    /* Recently Played Items */
    .recent-item {
      background: #f8f9fa;
      padding: 0.75rem;
      border-radius: 8px;
      margin-bottom: 0.75rem;
      display: flex;
      align-items: center;
      gap: 0.75rem;
      transition: all 0.2s;
    }

    .recent-item:hover {
      background: #e9ecef;
      transform: translateX(5px);
    }

    .recent-item-thumbnail {
      width: 50px;
      height: 50px;
      object-fit: cover;
      border-radius: 6px;
      flex-shrink: 0;
    }

    .recent-item-info {
      flex: 1;
      min-width: 0;
    }

    .recent-item-title {
      font-weight: 600;
