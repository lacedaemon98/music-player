    }

    .recent-item-meta {
      color: #666;
      font-size: 0.8rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .recent-item-added-by {
      display: flex;
      align-items: center;
      gap: 0.25rem;
    }

    /* Chat Box */
    .chat-box {
      background: white;
      border-radius: 20px;
      padding: 1.5rem;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .chat-container {
      background: #f8f9fa;
